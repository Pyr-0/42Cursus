NAME = libft.a
SRC = *.c


all: $(NAME)

$(NAME):
	gcc  -Wall -Werror -Wextra -c $(SRC)
	ar -crs $(NAME) *.o 

clean: 
	rm -f *.o
	rm -f *~

fclean: clean
	rm -f $(NAME)

re: fclean all

so:
	gcc -nostartfiles -fPIC -c $(SRC)
	gcc -nostartfiles -shared -o libft.so *.o










